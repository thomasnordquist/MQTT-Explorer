{
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./build",
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "sourceMap": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ES2020"
    },
    "transpileOnly": true,
    "esm": true
  },
  "includes": [
    "src/**/*.ts"
  ],
  "exclude": [
    "app",
    "node_modules",
    "src/**/*.spec.ts",
    "**/*.d.ts",
    "typings",
    "../events",
    "../app"
  ]
}